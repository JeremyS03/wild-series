{% extends 'base.html.twig' %}

{% block title %}Catégorie #{{ category.name }}{% endblock %}

{% block body %}
    <div class="media">
    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.synopsis }}</p>
            <a href="{{ path("program_show", { id: program.id }) }}">Détails</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    </div>

    <a href="{{ path('category_index') }}">
        Retour à la liste des category
    </a>
{% endblock %}